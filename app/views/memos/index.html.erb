<header>
  <div class="temp_menu">
	    <div class="cale_img">
	    	<%= link_to image_tag('calendar.png'), controller: 'memos', action: 'calendar', date: Time.now  %>
	    </div>
	    <h1>メモ一覧</h1>
	    <div class="menu_plus">
	    	<%= link_to image_tag('plus.png'), new_memo_path(date:Date.today) %>
		</div>
  </div>
</header>
<div class="container">
	<% @memos.each do |memo| %>
	<div class="task">
		<table>
			<tr>
				<td><%= button_to ' ', memo_path(memo), method: :delete ,class: "delete_button", data: { confirm: '削除しますか？' }%></td>
				<td><%= link_to memo.show_at.try(:strftime, "%Y/%m/%d"), edit_memo_path(memo), class:'list-memos' %></td>
			</tr>
		</table>
	</div>
	<% end %>
</div>