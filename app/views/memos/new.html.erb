<%= form_for(@memo) do |f| %>
<header>
  <div class="memo_menu">
    <div class="return_img">
    <%= link_to image_tag('return.png'), memos_url %>
    </div>
    <h1><%= f.date_select :show_at, :use_month_numbers=> true %></h1>
    <%= button_tag type: :submit do %>
      <div class="check"><%= image_tag "check.png" %></div>
    <% end %>
  </div>
</header>
<div class="container">
	<div>
		<%= f.text_area :content ,style: "border: 1px solid lightgray;min-width: 100%; height: 300px;"%>
	</div>
</div>
<% end %>