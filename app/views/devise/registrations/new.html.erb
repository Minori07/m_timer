<div class="top">
  <div class="icon"><%= image_tag "icon.png" %></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,style: "background-color: white;border-radius: 5px;margin-bottom: 10px;color:gray;" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" ,style: "background-color: white;border-radius: 5px;margin-bottom: 20px;color:gray;" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,style: "background-color: white;border-radius: 5px;margin-bottom: 5px;color:gray;" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,style: "background-color: white;border-radius: 5px;margin-bottom: 10px;color:gray;" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,style: "background-color: lightgray; color: #fb8e7f; margin: 10px;padding: 2px 5px; border-radius: 10px;"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= link_to 'return_Top', home_index_path %>
</div>