<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<header>
  <div class="temp_menu">
    <div class="return_img">
    <%= link_to image_tag('return.png'), tasks_cfg_path ,data: { confirm: "変更されませんがよろしいですか?" }%>
    </div>
    <h1><%= resource_name.to_s.humanize %>情報</h1>
    <%= button_tag type: :submit do %>
      <div class="check"><%= image_tag "check.png" %></div>
    <% end %>
    </div>
</header>
<div class="container_u">
  <%= devise_error_messages! %>

   <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;"%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px; margin-bottom: 20px;"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %><em>(変えない場合は空白)</em><br />
    <em>※<%= @minimum_password_length %> 文字以上</em><br />
    <%= f.password_field :password, autocomplete: "off",style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="field">
    <%= "Password" %><em>(確認)</em><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;"%>
  </div>

  <div class="field">
    <em>(変更するには現在のPaswwordを入力してください)</em><br />
    <%= f.password_field :current_password, autocomplete: "off" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;"%>
  </div>


<!-- <h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
 -->
</div>
<% end %>
